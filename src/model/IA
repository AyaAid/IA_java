//Niveau 1

if (currentPlayer == joueur2) {
    int column = (int)(Math.random() * (grille.getColonnes()));
    Grille.addJeton(currentPlayer.getCouleur(), column);
}

//Nuveau 2

if (currentPlayer == joueur2) {
    int column = -1;
    for (int c = 0; c < grille.getColonnes(); c++) {
        if (grille.isAligned(c, currentPlayer.getCouleur())) {
            column = c;
            break;
        }
    }
    if (column == -1) {
        column = (int)(Math.random() * (grille.getColonnes()));
    } else {
        column = column + 1;
    }
    Grille.addJeton(currentPlayer.getCouleur(), column);
}

//Niveau 3

if (currentPlayer == joueur2) {
    int column = playerModel.predictNextMove(grille.getPreviousMoves());
    column = (column + 1) % grille.getColonnes();
    Grille.addJeton(currentPlayer.getCouleur(), column);
}

//Niveau 4

if (currentPlayer == joueur2) {
    int column = minimax.findBestMove(grille, currentPlayer.getCouleur());
    Grille.addJeton(currentPlayer.getCouleur(), column);
}